<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Student Management</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

    body {
      margin: 0;
      padding: 40px;
      font-family: 'Poppins', sans-serif;
      /* Purple-pink gradient background */
      background: linear-gradient(135deg, #d5a6ff, #ffb6c1);
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      color: #3e1361;
    }

    h1 {
      font-weight: 700;
      font-size: 3rem;
      margin-bottom: 30px;
      text-shadow: 0 2px 5px rgba(62, 19, 97, 0.3);
    }

    h2 {
      font-weight: 600;
      font-size: 1.8rem;
      margin-bottom: 20px;
      align-self: flex-start;
      color: #5d2780;
    }

    form {
      background: rgba(255 255 255 / 0.15);
      backdrop-filter: blur(20px);
      padding: 25px 30px;
      border-radius: 18px;
      box-shadow: 0 8px 32px rgba(93, 39, 128, 0.15);
      width: 100%;
      max-width: 900px;
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
      margin-bottom: 40px;
      border: 1px solid rgba(255 255 255 / 0.3);
    }

    form input {
      flex: 1 1 150px;
      min-width: 140px;
      padding: 12px 15px;
      border: none;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 500;
      color: #3e1361;
      background: rgba(255 255 255 / 0.4);
      box-shadow: inset 0 1px 4px rgba(93, 39, 128, 0.1);
      transition: box-shadow 0.25s ease, background-color 0.25s ease;
    }
    form input::placeholder {
      color: #5d2780dd;
    }
    form input:focus {
      outline: none;
      box-shadow: 0 0 12px #c78bffaa;
      background: rgba(255 255 255 / 0.7);
    }

    form button {
      flex: 1 1 120px;
      min-width: 120px;
      background: #b779ffcc;
      border: none;
      border-radius: 14px;
      color: white;
      font-weight: 700;
      font-size: 1.1rem;
      cursor: pointer;
      box-shadow: 0 6px 18px #b779ff88;
      transition: background-color 0.3s ease;
      align-self: center;
    }
    form button:hover {
      background: #8f55ff;
      box-shadow: 0 8px 22px #8f55ffcc;
    }

    table {
      width: 100%;
      max-width: 900px;
      border-collapse: separate;
      border-spacing: 0 14px;
      background: rgba(255 255 255 / 0.15);
      backdrop-filter: blur(20px);
      border-radius: 22px;
      box-shadow: 0 8px 32px rgba(93, 39, 128, 0.15);
      border: 1px solid rgba(255 255 255 / 0.3);
    }

    th, td {
      padding: 18px 22px;
      text-align: left;
      font-weight: 600;
      color: #3e1361;
    }

    th {
      font-size: 1.2rem;
      letter-spacing: 0.06em;
      border-bottom: 2px solid #b779ff99;
    }

    tr {
      background: rgba(255 255 255 / 0.3);
      border-radius: 20px;
      transition: background-color 0.3s ease;
      box-shadow: 0 3px 12px rgba(93, 39, 128, 0.08);
    }

    tr:hover {
      background: rgba(255 255 255 / 0.45);
      cursor: default;
    }

    td:last-child {
      display: flex;
      gap: 14px;
    }

    a, button.delete-btn {
      padding: 8px 16px;
      border-radius: 14px;
      font-weight: 600;
      font-size: 0.95rem;
      cursor: pointer;
      border: none;
      box-shadow: 0 3px 14px rgba(93, 39, 128, 0.12);
      background: rgba(255 255 255 / 0.45);
      color: #5d2780;
      text-decoration: none;
      transition: background-color 0.25s ease;
      align-self: center;
    }
    .h{
      margin-left: 600px;
    }

    a:hover {
      background: #d9b3ffcc;
      color: #3e1361;
    }

    button.delete-btn:hover {
      background: #ff8eb9cc;
      color: white;
    }
  </style>
</head>
<body>

  <h1>Student List</h1>

  <!-- Add Student Form -->
  <h2 class="h">Add Student</h2>
  <form action="/add" method="POST">
    <input type="text" name="name" placeholder="Name" required />
    <input type="text" name="rollNo" placeholder="Roll Number" required />
    <input type="text" name="department" placeholder="Department" required />
    <input type="text" name="year" placeholder="Year" required />
    <input type="email" name="email" placeholder="Email" required />
    <button type="submit">Add Student</button>
  </form>

  <!-- Student Table -->
  <table>
    <tr>
      <th>Name</th><th>Roll No</th><th>Dept</th><th>Year</th><th>Email</th><th>Actions</th>
    </tr>
    <% students.forEach(student => { %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.rollNo %></td>
        <td><%= student.department %></td>
        <td><%= student.year %></td>
        <td><%= student.email %></td>
        <td>
          <a href="/edit/<%= student._id %>">Edit</a>
          <form action="/delete/<%= student._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="delete-btn">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>

</body>
</html>
